<?xml version="1.0" encoding="UTF-8"?>
<!-- 示例 UIAutomator XML - 模拟登录页面 -->
<hierarchy rotation="0">
  <node index="0" class="android.widget.FrameLayout" bounds="[0,0][1080,2340]">
    <node index="0" class="android.widget.LinearLayout" bounds="[0,0][1080,2340]">
      <!-- 状态栏 -->
      <node index="0" class="android.view.View" bounds="[0,0][1080,100]" />

      <!-- 标题栏 -->
      <node index="1" class="android.widget.TextView"
            resource-id="com.example:id/title"
            text="登录"
            bounds="[0,100][1080,200]" />

      <!-- Logo -->
      <node index="2" class="android.widget.ImageView"
            resource-id="com.example:id/logo"
            content-desc="App Logo"
            bounds="[390,300][690,600]" />

      <!-- 用户名输入框 -->
      <node index="3" class="android.widget.EditText"
            resource-id="com.example:id/username"
            text="请输入手机号/邮箱"
            bounds="[100,700][980,800]"
            clickable="true" />

      <!-- 密码输入框 -->
      <node index="4" class="android.widget.EditText"
            resource-id="com.example:id/password"
            text="请输入密码"
            bounds="[100,850][980,950]"
            clickable="true" />

      <!-- 登录按钮 -->
      <node index="5" class="android.widget.Button"
            resource-id="com.example:id/login_btn"
            text="登录"
            bounds="[100,1050][980,1150]"
            clickable="true"
            enabled="true" />

      <!-- 忘记密码 -->
      <node index="6" class="android.widget.TextView"
            resource-id="com.example:id/forgot_password"
            text="忘记密码？"
            bounds="[100,1200][300,1250]"
            clickable="true" />

      <!-- 注册 -->
      <node index="7" class="android.widget.TextView"
            resource-id="com.example:id/register"
            text="立即注册"
            bounds="[780,1200][980,1250]"
            clickable="true" />

      <!-- 第三方登录区域 -->
      <node index="8" class="android.widget.TextView"
            text="其他登录方式"
            bounds="[400,1800][680,1850]" />

      <!-- 微信登录 -->
      <node index="9" class="android.widget.ImageView"
            resource-id="com.example:id/wechat_login"
            content-desc="微信登录"
            bounds="[340,1900][440,2000]"
            clickable="true" />

      <!-- QQ登录 -->
      <node index="10" class="android.widget.ImageView"
            resource-id="com.example:id/qq_login"
            content-desc="QQ登录"
            bounds="[490,1900][590,2000]"
            clickable="true" />

      <!-- 苹果登录 -->
      <node index="11" class="android.widget.ImageView"
            resource-id="com.example:id/apple_login"
            content-desc="Apple登录"
            bounds="[640,1900][740,2000]"
            clickable="true" />
    </node>
  </node>
</hierarchy>
